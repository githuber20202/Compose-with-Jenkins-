pipeline {
    agent any
    
    environment {
        DOCKER_HUB_REPO = 'formy5000/resources_viewer'
        DOCKER_HUB_CREDS = credentials('dockerhub-credentials')
    }
    
    stages {
        stage('Workspace Cleanup') {
            steps {
                echo 'ğŸ§¹ Cleaning workspace...'
                deleteDir()
            }
        }
        
        stage('Checkout') {
            steps {
                echo 'ğŸ“¦ Cloning from GitHub...'
                git branch: 'main', 
                    url: 'https://github.com/githuber20202/JB-PROJECT.git'
                
                script {
                    env.GIT_COMMIT_SHORT = sh(
                        script: "git rev-parse --short HEAD",
                        returnStdout: true
                    ).trim()
                    
                    echo "ğŸ“ Git commit: ${env.GIT_COMMIT_SHORT}"
                }
                
                sh 'ls -la'
            }
        }
        
        stage('Verify Files') {
            steps {
                echo 'ğŸ” Checking required files...'
                sh '''
                    test -f app.py && echo "âœ… app.py" || exit 1
                    test -f Dockerfile && echo "âœ… Dockerfile" || exit 1
                    test -f requirements.txt && echo "âœ… requirements.txt" || exit 1
                '''
            }
        }
        
        stage('Build & Push with Docker') {
            steps {
                echo 'ğŸ”¨ Building with Docker (simpler approach)...'
                script {
                    // Login
                    sh 'echo $DOCKER_HUB_CREDS_PSW | docker login -u $DOCKER_HUB_CREDS_USR --password-stdin'
                    
                    // Build
                    sh """
                        docker build -t ${DOCKER_HUB_REPO}:latest .
                        docker tag ${DOCKER_HUB_REPO}:latest ${DOCKER_HUB_REPO}:build-${BUILD_NUMBER}
                        docker tag ${DOCKER_HUB_REPO}:latest ${DOCKER_HUB_REPO}:sha-${env.GIT_COMMIT_SHORT}
                    """
                    
                    // Push
                    sh """
                        docker push ${DOCKER_HUB_REPO}:latest
                        docker push ${DOCKER_HUB_REPO}:build-${BUILD_NUMBER}
                        docker push ${DOCKER_HUB_REPO}:sha-${env.GIT_COMMIT_SHORT}
                    """
                    
                    // Logout
                    sh 'docker logout'
                    
                    echo 'âœ… Build & Push complete!'
                }
            }
        }
        
        stage('Test Pull') {
            steps {
                echo 'ğŸ§ª Testing pull...'
                sh """
                    docker pull ${DOCKER_HUB_REPO}:latest
                    docker images | grep resources_viewer
                """
            }
        }
        
        stage('Cleanup') {
            steps {
                echo 'ğŸ§¹ Cleaning local images...'
                sh """
                    docker rmi ${DOCKER_HUB_REPO}:latest || true
                    docker rmi ${DOCKER_HUB_REPO}:build-${BUILD_NUMBER} || true
                    docker rmi ${DOCKER_HUB_REPO}:sha-${env.GIT_COMMIT_SHORT} || true
                """
            }
        }
    }
    
    post {
        success {
            echo """
            
            â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
            â•‘     ğŸ‰ CI Pipeline SUCCESS! ğŸ‰           â•‘
            â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
            
            ğŸ“¦ Images: ${DOCKER_HUB_REPO}
            
            Tags:
            âœ“ latest
            âœ“ build-${BUILD_NUMBER}
            âœ“ sha-${env.GIT_COMMIT_SHORT}

            ğŸ”— https://hub.docker.com/r/${DOCKER_HUB_REPO}/tags
            """
        }
        failure {
            echo "âŒ Failed - check logs"
        }
    }
}